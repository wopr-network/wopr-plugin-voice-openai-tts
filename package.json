{
  "name": "wopr-plugin-voice-openai-tts",
  "version": "1.0.0",
  "description": "OpenAI TTS provider for WOPR voice",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "wopr": {
    "plugin": {
      "name": "voice-openai-tts",
      "category": "voice",
      "type": "tts",
      "description": "OpenAI Text-to-Speech",
      "requires": {
        "env": ["OPENAI_API_KEY"]
      },
      "primaryEnv": "OPENAI_API_KEY"
    }
  }
}
